<body>

 <div class="" style="margin-left: -5px; margin-right: -5px;">
        <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mx-1">
          <a class="navbar-brand text-bold mx-2 mx-3 lead" href=""> <b>Welcome...On Portal</b></a>  
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
            </ul>
           
          </div>
        </nav>
        </header>
        </div>
              <img src="./images/blog4.webp" alt="Card image" style="margin-left:20%;height:30%;">

  <% if(record.length >0){ %>
            <% record.forEach(function(row){   %>
<div class="container" >

        <div class="row">
        <div class="col col-lg-4">
              <img src="uploads/<%= row.image %>" alt="Card image" style="margin-left:5px; margin-top:5%; height:300px;">
        </div>
        <div class="col col-lg-4">
                <form method="post" action="">
        <div class="card" style=" height:300px; margin-left:-6%; margin-top:5%;" >
            <div class="card-body">
             <h5 class="card-title"><a href="" style="color:red"><%= row.title %></a></h5>
             <h6 class="card-subtitle mb-2 text-muted">posted on <%= row.date %></h6>
             <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
             <input type="email" name="menemail" value="<%= row.menEmail %>" hidden>
              <input type="text" name="dd" value="<%= row._id %>" hidden>

            <button type="submit" name="submit" class="btn btn-primary" style="margin-left:40%;">Continue</button>
            </div>
        </div></form>
        </div>
        </div>
        </div>
<hr style="margin-right:35%; margin-left:5%;">
